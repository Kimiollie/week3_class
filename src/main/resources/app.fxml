<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AppController">
   <children>
      <Label fx:id="jobTitleLabel" text="%employeeJobTitle" />
      <ComboBox fx:id="languageComboBox" onAction="#switchLanguage" prefWidth="150.0" />
      <ListView fx:id="jobTitleListView" prefHeight="200.0" prefWidth="200.0" />
      <TextField fx:id="keyNameField" promptText="Enter Key Name" />
      <TextField fx:id="translationField" promptText="Enter Translation" />
      <Button fx:id="addUpdateButton" mnemonicParsing="false" text="Add/Update Translation" onAction="#addOrUpdateTranslation"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
